{
  "plugins": {
    "entries": {
      "mcp-adapter": {
        "config": {
          "servers": [
            {
              "name": "hedera-knowledge",
              "command": "npx",
              "args": ["tsx", "src/mcp/hedera-knowledge-server.ts"],
              "env": {
                "HEDERA_ACCOUNT_ID": "${HEDERA_ACCOUNT_ID}",
                "HEDERA_PRIVATE_KEY": "${HEDERA_PRIVATE_KEY}"
              }
            }
          ]
        }
      },
      "telegram": {
        "config": {
          "botToken": "${TELEGRAM_BOT_TOKEN}",
          "allowedChatIds": ["${TELEGRAM_CHAT_ID}"]
        }
      }
    }
  }
}
