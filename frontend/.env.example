# GitHub OAuth (required for real authentication)
# Create a GitHub OAuth App: https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:3000/api/auth/callback/github
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# NextAuth secret (required for real authentication)
# Generate with: npx auth secret
AUTH_SECRET=

# Auth mode: set to "real" when using GitHub OAuth, omit or set "mock" for dev
# Must be NEXT_PUBLIC_ for Turbopack client-side inlining
NEXT_PUBLIC_AUTH_MODE=real

# ===== Kite AI Chain =====
NEXT_PUBLIC_USE_KITE_CHAIN=true
NEXT_PUBLIC_KITE_CHAIN_ID=2368
NEXT_PUBLIC_KITE_RPC_URL=https://rpc-testnet.gokite.ai/
NEXT_PUBLIC_KITE_EXPLORER_URL=https://testnet.kitescan.ai/
NEXT_PUBLIC_LEARNING_LEDGER_ADDRESS=

# ===== Kite Agent Passport OAuth =====
# Create OAuth app at Kite Agent Passport dashboard
KITE_OAUTH_CLIENT_ID=
KITE_OAUTH_CLIENT_SECRET=
KITE_OAUTH_BASE_URL=https://neo.dev.gokite.ai

# ===== Agent Wallet (Server Only — NEVER expose to client) =====
KITE_AGENT_PRIVATE_KEY=
KITE_USER_MNEMONIC=
KITE_MERCHANT_WALLET=

# ===== x402 =====
X402_FACILITATOR_URL=

# ===== Agent Identity =====
NEXT_PUBLIC_AGENT_DID=did:kite:learner.eth/claude-tutor/v1
KITE_AGENT_INDEX=0

# ===== Standing Intent Defaults =====
KITE_SI_MAX_TX=10000000000000000
KITE_SI_DAILY_CAP=100000000000000000
KITE_SI_TTL_HOURS=24

# ===== Web Terminal Backend (K8s) =====
# Demo server — set this to enable real Claude Code terminal
NEXT_PUBLIC_TERMINAL_API_URL=http://<PUBLIC_IP>:31000
